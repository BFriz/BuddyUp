<div class="goal-join">
  <div class="join">
      <% if current_user && !@goal.users.include?(current_user) %>
        <%= form_tag add_user_path(@goal), _method: 'PUT', class: 'submit-tag', data: { goal_id: @goal.id } do |form| %>
        <% end %>
          <%= submit_tag 'Join', :class => 'submit-tag' %>
        <p>Name: <%= @goal.name %></p>
        <p>Category: <%= @goal.category %></p>
        <p>Duration: <%= @goal.duration %> Days</p>
        <p><%= @goal.content %></p>
      <% end %>
   </div>

  <div class="no-join">
    <% if current_user.nil? %>
      <span>Sorry you have to login to join a goal<br></span>
<br><br><br><br><br>
<br>
<br>
      <p>Name: <%= @goal.name %></p>
      <p>Category: <%= @goal.category %></p>
      <p>Duration: <%= @goal.duration %> Days</p>
      <p><%= @goal.content %></p>
      <% end %>
  </div>

  <div class="joined">
    <% if current_user && @goal.users.include?(current_user) %>
    <%= link_to 'Lets do this', goal_comments_path(@goal), class: 'lets-doit' %>

  <% end %>
  </div>
</div>