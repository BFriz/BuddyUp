<!DOCTYPE html>
<html>
<head>
  <title>BuddyUp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
</head>
<body>
<div class='box box-7'>
   <h1 class = 'login'>
  
  </h1>


  <nav class='nav'>
    <%= link_to'Home', goals_path, class: 'navs' %>
    <%= link_to'Add a Goal', new_goal_path,class: 'navs' %>
     <% if current_user %>
        <%= link_to 'log out', logout_path %>
        <% else %>
        <%= link_to 'log in', new_session_path, class: 'navs' %>
        <%= link_to 'sign up', new_user_path, class: 'navs' %>
      <% end %>

     <% if flash[:success] %>
      <p><%= flash[:success] %></p>
    <% end %>
  </nav>
<!-- </div> -->

</div>



<div class="box box-3">
  <div class = 'buddy'>BUDDY-UP</div>
</div>


   


<%= yield %>

</body>
</html>
